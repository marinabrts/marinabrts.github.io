{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "GDP Around the World (in billion USD)",
  "title": {
    "text": "GDP and GNP (in billion USD)",
    "subtitle": "Current USD; Year: 2020; Source: The World Bank, World Development Indicators",
    "color": "white",
    "subtitleColor": "white",
    "subtitleFontSize": 10,
    "subtitleFontStyle":"italic"
  }, 
  "config": {
    "axis": {
      "labelColor": "white",
      "titleColor": "white"
    },
    "legend": {"labelColor": "white" }},

  "background": "black",

  "data": {
    "url": "https://raw.githubusercontent.com/marinabrts/marinabrts.github.io/main/observatory/GDP-GNP.csv",
    "format": {"type": "csv"}
  },
"height": 400,
"width": 250,

"selection": {
    "Region": {
      "type": "single",
      "fields": ["Region"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Europe and Central Asia",
          "South Asia",
          "Middle East and North Africa",
          "East Asia & Pacific",
          "Sub-Saharan Africa",
          "Latin America & Caribbean",
          "North America"
        ],
        "name": "Region"
      }
    }
  },

    "transform": [
    {"calculate": "datum.gdp/1000000000", "as": "GDP"},
    {"calculate": "datum.gnp/1000000000", "as": "GNP"}],

 "repeat": {"layer": ["GDP", "GNP"]},
  "spec": {
    "mark": "bar",
    "encoding": {
      "y": {"field": "Country Name", "type": "nominal", "title": ""},
      "x": {
        "field": {"repeat": "layer"},
        "type": "quantitative",
        "title": "Billion USD"
      },
      "color": {"datum": {"repeat": "layer"}, "title": "", "scale": {"range": ["#179fdb", "#f4c245"]}},
      "yOffset": {"datum": {"repeat": "layer"}},

      "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {"field": "GDP", "type": "quantitative", "title": "GDP (billion USD)", "format": ".2f"},
      {"field": "GNP", "type": "quantitative", "title": "GNP (billion USD)", "format": ".2f"}]

  }

}}
