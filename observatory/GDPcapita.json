{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "GDP per Capita Around the World (USD)",
  "title": {
    "text": "GDP per Capita (in USD)",
    "subtitle": "Current USD; Year: 2020; Source: The World Bank, World Development Indicators",
  "fontSize": 11,
  "subtitleFontSize": 10,
  "color": "white",
  "subtitleColor": "white",
  "subtitleFontStyle":"italic"
  },
  "config": {
    "axis": {
      "labelColor": "white",
      "titleColor": "white"
    },
    "legend": {"labelColor": "white"}},

  "background": "black",


  "data": {
    "url": "https://raw.githubusercontent.com/marinabrts/marinabrts.github.io/main/observatory/gdpp.csv",
    "format": {"type": "csv"}
  },
    
 "height": 370,
 "width": 170,

"mark": {"type": "bar"},

"selection": {
    "Region": {
      "type": "single",
      "fields": ["Region"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Europe and Central Asia",
          "South Asia",
          "Middle East and North Africa",
          "East Asia & Pacific",
          "Sub-Saharan Africa",
          "Latin America & Caribbean",
          "North America"
        ],
        "name": "Region"
      }
    }
  },

"transform": [
    {"filter": {"selection": "Region"}}
    ],


  "encoding": {
  "y": {
      "field": "Country Name", 
      "type": "nominal", 
      "title": "",
      "axis": {"labelAngle": 0,"labelFontSize": 9}},


  "x": {"field": "GDP",
    "type": "quantitative",
    "title": ""},

    "color": {"field": "Region", "type": "nominal", "title": "Region:", "scale": {"scheme":"set2"}},

    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country"},
      {"field": "GDP", "type": "nominal", "title": "GDP per capita (USD)", "format": ".2f"}]}
}

