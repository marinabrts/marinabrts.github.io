{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Number of new business registrations per 1,000 people plotted against Social Mobility Index",


   "data": {
    "url": "https://raw.githubusercontent.com/marinabrts/marinabrts.github.io/main/project/bus_mob_pov.csv",
    "format": {"type": "csv"}
  },

 "title": {
    "text": "Social Mobility Index and Business Registrations",
    "subtitle": "New business registrations per 1,000 people in 2018. Source: World Bank, World Economic Forum",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start"
  },
  
 "height": 300,
 "width": 275,

"mark": {"type": "circle", "size": 60},

"selection": {
    "Continent": {
      "type": "single",
      "fields": ["Continent"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "South America"
        ],
        "name": "Continent"
      }
    }
  },

   "transform": [
    
    {"filter": {"selection": "Continent"}}
  ],

  "encoding": {
    "x": {
      "field": "Business Registrations",
      "type": "quantitative",
      "title": "Registrations per 1,000 People"
      },

    "y": {
      "field": "Index Score",
      "type": "quantitative",
      "title": "Social Mobility Index (SMI)",
      "scale":{"domain":[30, 90]}
    },
    "color": {"field": "Continent", "type": "nominal", "title": "Continent:", "scale": {"scheme":"set1"}},


   "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Index Score", "type": "quantitative", "title": "SMI"},
      {"field": "Business Registrations", "type": "quantitative", "title": "Registrations"}
      ]
}
}
